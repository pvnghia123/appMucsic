<?xml version="1.0" encoding="utf-8"?>
<LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PlayMusicActivity"
    android:weightSum="10"
    android:orientation="vertical"
    android:background="#C6A4A4">

    
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarPlaynhac"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpaper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
<LinearLayout
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:layout_weight="10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tctotalttimesong"
        android:layout_weight="0.5"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="16sp"
        android:text="00:00"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <SeekBar
        android:id="@+id/seekbarsong"
        android:layout_weight="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textStyle="bold"
        android:textSize="16dp"

        android:text="00:00"
        android:gravity="center"
        android:layout_weight="0.5"
        android:id="@+id/tvtimesong"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>
        <LinearLayout
            android:layout_weight="10"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:src="@drawable/iconsuffle"
                android:scaleType="fitXY"
                android:background="@null"
                android:id="@+id/butsuffle"
                android:layout_marginLeft="25dp"
                android:layout_width="50dp"
                android:layout_height="50sp"/>
            <ImageButton
                android:src="@drawable/iconpreview"
                android:scaleType="fitXY"
                android:background="@null"
                android:id="@+id/butorpreview"
                android:layout_marginLeft="15dp"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
            <ImageButton
                android:src="@drawable/iconplay"
                android:scaleType="fitXY"
                android:background="@null"
                android:id="@+id/butPlay"
                android:layout_marginLeft="15dp"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <ImageButton
                android:src="@drawable/iconnext"
                android:scaleType="fitXY"
                android:background="@null"
                android:id="@+id/butnext"
                android:layout_marginLeft="15dp"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
            <ImageButton
                android:src="@drawable/iconrepeat"
                android:scaleType="fitXY"
                android:background="@null"
                android:id="@+id/butRepeat"
                android:layout_marginLeft="15dp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>


        </LinearLayout>
        
    </LinearLayout>
</LinearLayout>