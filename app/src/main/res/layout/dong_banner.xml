<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
android:layout_height="match_parent">

<ImageView
    android:id="@+id/idbackgroudbanner"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:scaleType="fitXY"
    />
<View
    android:layout_width="match_parent"
    android:layout_height="200dp"
    />
<RelativeLayout
    android:id="@+id/relativel"
    android:layout_alignBottom="@+id/idbackgroudbanner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/imageviewbanner"
        android:padding="2dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        />
    <TextView
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="17dp"
        android:text="do ta khong do nang"
        android:id="@+id/Textviewtitllebannerbaihat"
        android:layout_toRightOf="@+id/imageviewbanner"
        android:layout_alignTop="@+id/imageviewbanner"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_toRightOf="@+id/imageviewbanner"
        android:layout_below="@+id/Textviewtitllebannerbaihat"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        >

        <TextView
            android:id="@+id/txtnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:maxLines="2"
            android:text="bai hat moi nhat cuar onluc"
            android:textColor="#F1698D"
            android:textSize="13dp" />


    </RelativeLayout>



</RelativeLayout>

</RelativeLayout>